<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_above="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />


                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />

                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@id/ln1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />


                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vang2"
                    android:gravity="center"
                    android:scaleType="centerCrop" />

                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@id/ln2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/img5"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />
                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:gravity="center"
                    android:id="@+id/tv5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/rlt6"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />

                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ln4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/ln1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlt7"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />


                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt8"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />

                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/ln4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rlt9"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />
                <TextView
                    android:fontFamily="sans-serif-black"
                    android:layout_centerInParent="true"
                    android:textSize="18dp"
                    android:textColor="#21211f"
                    android:id="@+id/tv9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/rlt10"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/img10"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/vang2" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="100dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text=""
                    android:textColor="#21211f"
                    android:textSize="18dp"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln6"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/ln5"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rltdong"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btdong"
                    android:layout_width="150dp"
                    android:layout_height="46dp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="Đóng"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-medium"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rltlayque"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btlayque"
                    android:layout_width="150dp"
                    android:layout_height="46dp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="Lấy Quẻ"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-medium"/>

                <Button
                    android:id="@+id/btxemketqua"
                    android:layout_width="150dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="Xem Kết Quả"
                    android:textSize="18sp"
                    android:visibility="gone"
                    />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/id_banner">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>